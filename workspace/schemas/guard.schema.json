{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Guard",
  "contentMediaType": "merge",
  "format": "parent-object",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "visibility": {
      "format": "hidden",
      "$ref": "./visibility.schema.json",
      "const": "public"
    },
    "activity": {
      "format": "dropdown-select-tag",
      "type": "string",
      "const": [
        "activity"
      ]
    },
    "condition": {
      "type": "string",
      "format": "input-string"
    },
    "true": {
      "type": "object",
      "format": "sub-object",
      "properties": {
        "to": {
          "format": "dropdown-select-tag",
          "type": "string",
          "const": [
            "state",
            "guard"
          ]
        },
        "activity": {
          "format": "dropdown-select-tag",
          "type": "string",
          "const": [
            "activity"
          ]
        }
      }
    },
    "false": {
      "type": "object",
      "format": "sub-object",
      "properties": {
        "to": {
          "format": "dropdown-select-tag",
          "type": "string",
          "const": [
            "state",
            "guard"
          ]
        },
        "activity": {
          "format": "dropdown-select-tag",
          "type": "string",
          "const": [
            "activity"
          ]
        }
      }
    },
    "$link": {
      "format": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": [
            "*",
            "guard"
          ]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "$ref": "./scope.schema.json",
          "const": "parent"
        }
      }
    }
  }
}