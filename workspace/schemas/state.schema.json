{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "State",
  "contentMediaType": "window",
  "format": "parent-object",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "states": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./state.schema.json"
      }
    },
    "transitions": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./transition.schema.json"
      }
    },
    "$link": {
      "format": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": ["*", "state"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "type": "string",
          "const": "parent"
        }
      }
    }
  }
}