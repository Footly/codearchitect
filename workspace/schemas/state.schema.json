{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "State",
  "contentMediaType": "window",
  "format": "parent-object",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "states": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./state.schema.json"
      }
    },
    "transitions": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./transition.schema.json"
      }
    },
    "$tag": {
      "format": "hidden",
      "type": "object",
      "properties": {
        "$filter": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": ["*", "state"]
        },
        "$scope": {
          "type": "string",
          "const": "global"
        }
      }
    },
    "$tags": {
      "type": "array",
      "format": "hidden",
      "items": {
        "type": "object",
        "properties": {
          "$tag": {
            "type": "array",
            "items": {
              "$ref": "./tags.schema.json"
            }
          },
          "$id": {
            "type": "string"
          }
        }
      }
    }
  }
}