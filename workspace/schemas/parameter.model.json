{
  "$schema": "https://raw.githubusercontent.com/NarcisOriol/codearchitect_3/bb3542a490d833055f4b86ddf22a5bf56e4f75a6/resources/codearchitect.schema.json",
  "type": "object",
  "title": "Parameter",
  "vscode-icon": "symbol-parameter",
  "modelType": "parent-object",
  "properties": {
    "$id": {
      "type": "string",
      "modelType": "hidden"
    },
    "$label": {
      "type": "string",
      "modelType": "hidden"
    },
    "datatype": {
      "modelType": "dropdown-select-tag",
      "type": "string",
      "const": ["types"]
    },
    "isArray": {
      "modelType": "input-string",
      "type": "string"
    },
    "isPointer": {
      "modelType": "checkbox",
      "type": "boolean"
    },
    "pointerDirection": {
      "modelType": "dropdown-select",
      "type": "string",
      "enum": ["in", "out", "in/out"]
    },
    "isPointerToConst": {
      "modelType": "checkbox",
      "type": "boolean"
    },
    "isConstPointer": {
      "modelType": "checkbox",
      "type": "boolean"
    }
  },
  "if": {
    "properties": {
      "isPointer": { "const": true }
    }
  },
  "then": {
    "required": ["pointerDirection"],
    "anyOf": [
      {
        "properties": {
          "isPointerToConst": { "type": "boolean" }
        }
      },
      {
        "properties": {
          "isConstPointer": { "type": "boolean" }
        }
      }
    ]
  },
  "else": {
    "not": {
      "anyOf": [
        { "required": ["pointerDirection"] },
        { "required": ["isPointerToConst"] },
        { "required": ["isConstPointer"] }
      ]
    }
  }
}
