{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "HSM",
    "format": "parent-object",
    "contentMediaType": "circuit-board",
    "properties": {
      "$id": {
        "type": "string",
        "format": "hidden"
      },
      "$label": {
        "type": "string",
        "format": "hidden"
      },
      "states": {
        "type": "array",
        "format": "folder",
        "items": {
          "$ref": "./state.schema.json"
        }
      },
      "$tag": {
        "format": "hidden",
        "type": "object",
        "properties": {
          "$filter": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "const": ["*", "hsm"]
          },
          "$scope": {
            "type": "string",
            "const": "global"
          }
        }
      },
      "$tags": {
        "type": "array",
        "format": "hidden",
        "items": {
          "type": "object",
          "properties": {
            "$tag": {
              "type": "array",
              "items": {
                "$ref": "./tags.schema.json"
              }
            },
            "$id": {
              "type": "string"
            }
          }
        }
      }
    }
  }