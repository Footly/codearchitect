{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "HSM",
  "format": "parent-object",
  "contentMediaType": "circuit-board",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "visibility": {
      "format": "hidden",
      "$ref": "./visibility.schema.json",
      "const": "public"
      
    },
    "states": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./state.schema.json"
      }
    },
    "$link": {
      "format": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": [
            "*",
            "hsm"
          ]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "$ref": "./scope.schema.json",
          "const": "parent"
        }
      }
    }
  }
}