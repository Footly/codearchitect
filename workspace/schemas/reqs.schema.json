{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Requirements",
  "format": "parent-object",
  "contentMediaType": "book",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "description": {
      "format": "text-area",
      "type": "string"
    },
    "$link": {
      "format": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": ["*", "reqs"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "type": "string",
          "const": "parent"
        }
      }
    }
  }
}
