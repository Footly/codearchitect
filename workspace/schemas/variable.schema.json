{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Variable",
  "contentMediaType": "symbol-variable",
  "format": "parent-object",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "datatype": {
      "format": "dropdown-select-tag",
      "type": "string",
      "const": ["types"]
    },
    "$visibility": {
      "format": "dropdown-select",
      "$ref": "./visibility.schema.json"
    },
    "isArray": {
      "format": "input-string",
      "type": "string"
    },
    "isPointer": {
      "format": "checkbox",
      "type": "boolean"
    },
    "isVolatile": {
      "format": "checkbox",
      "type": "boolean"
    },
    "isConst": {
      "format": "checkbox",
      "type": "boolean"
    },
    "$link": {
      "format": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": ["*", "variable"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "$ref": "./scope.schema.json",
          "const": "parent"
        }
      }
    }
  }
}