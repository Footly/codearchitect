{
  "$schema": "https://raw.githubusercontent.com/NarcisOriol/codearchitect_3/bb3542a490d833055f4b86ddf22a5bf56e4f75a6/resources/codearchitect.schema.json",
  "type": "object",
  "title": "Transition",
  "vscode-icon": "arrow-right",
  "modelType": "parent-object",
  "properties": {
    "$id": {
      "type": "string",
      "modelType": "hidden"
    },
    "$label": {
      "type": "string",
      "modelType": "hidden"
    },
    "visibility": {
      "modelType": "hidden",
      "$ref": "./visibility.schema.json",
      "const": "public"
    },
    "event": {
      "modelType": "dropdown-select-tag",
      "type": "string",
      "const": [
        "event"
      ]
    },
    "transition": {
      "type": "object",
      "modelType": "sub-object",
      "properties": {
        "to": {
          "modelType": "dropdown-select-tag",
          "type": "string",
          "const": [
            "state",
            "guard"
          ]
        },
        "activity": {
          "modelType": "dropdown-select-tag",
          "type": "string",
          "const": [
            "state",
            "activity"
          ]
        }
      }
    },
    "$link": {
      "modelType": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": [
            "*",
            "transition"
          ]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "$ref": "./scope.schema.json",
          "const": "parent"
        }
      }
    }
  }
}