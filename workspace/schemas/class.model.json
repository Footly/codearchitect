{
  "$schema": "https://raw.githubusercontent.com/NarcisOriol/codearchitect_3/bb3542a490d833055f4b86ddf22a5bf56e4f75a6/resources/codearchitect.schema.json",
  "type": "object",
  "title": "Class",
  "modelType": "parent-object",
  "vscode-icon": "symbol-class",
  "properties": {
    "$id": {
      "type": "string",
      "modelType": "hidden"
    },
    "$label": {
      "type": "string",
      "modelType": "hidden"
    },
    "visibility": {
      "modelType": "hidden",
      "$ref": "./visibility.schema.json",
      "const": "public"
    },
    "requirements": {
      "type": "array",
      "modelType": "pool-dropdown-select-tag",
      "items": {
        "type": "string",
        "const": ["reqs"]
      }
    },
    "variables": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./variable.schema.json"
      }
    },
    "funcions": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./funcio.schema.json"
      }
    },
    "datastructures": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./datastructure.schema.json"
      }
    },
    "typedefs": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./typedefs.schema.json"
      }
    },
    "enumerators": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./enumerator.schema.json"
      }
    },
    "hsm": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./hsm.schema.json"
      }
    },
    "$link": {
      "modelType": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": ["*", "class"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "$ref": "./scope.schema.json",
          "const": "local"
        }
      }
    }
  }
}