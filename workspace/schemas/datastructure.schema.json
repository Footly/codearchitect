{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DataStructure",
  "format": "parent-object",
  "contentMediaType": "symbol-struct",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "type": {
      "format": "dropdown-select",
      "type": "string",
      "enum": ["struct", "union"]
    },
    "members": {
      "format": "folder",
      "type": "array",
      "items": {
        "$ref": "./datamember.schema.json"
      }
    },
    "$link": {
      "format": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": ["*", "types"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "type": "string",
          "const": "parent"
        }
      }
    }
  }
}