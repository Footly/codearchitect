{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Class",
  "format": "parent-object",
  "contentMediaType": "symbol-class",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "requirements": {
      "type": "array",
      "format": "pool-dropdown-select-tag",
      "items": {
        "type": "string",
        "const": ["reqs"]
      }
    },
    "variables": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./variable.schema.json"
      }
    },
    "funcions": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./funcio.schema.json"
      }
    },
    "datastructures": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./datastructure.schema.json"
      }
    },
    "typedefs": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./typedefs.schema.json"
      }
    },
    "enumerators": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./enumerator.schema.json"
      }
    },
    "hsm": {
      "type": "array",
      "format": "folder",
      "items": {
        "$ref": "./hsm.schema.json"
      }
    },
    "$link": {
      "format": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": ["*", "class"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "type": "string",
          "const": "parent"
        }
      }
    }
  }
}