{
  "$schema": "https://raw.githubusercontent.com/NarcisOriol/codearchitect_3/bb3542a490d833055f4b86ddf22a5bf56e4f75a6/resources/codearchitect.schema.json",
  "type": "object",
  "title": "State",
  "vscode-icon": "window",
  "modelType": "parent-object",
  "properties": {
    "$id": {
      "type": "string",
      "modelType": "hidden"
    },
    "$label": {
      "type": "string",
      "modelType": "hidden"
    },
    "visibility": {
      "modelType": "hidden",
      "$ref": "./visibility.schema.json",
      "const": "public"
    },
    "states": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./state.schema.json"
      }
    },
    "transitions": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./transition.schema.json"
      }
    },
    "guards": {
      "type": "array",
      "modelType": "folder",
      "items": {
        "$ref": "./guard.schema.json"
      }
    },
    "isInit": {
      "type":"boolean",
      "modelType": "checkbox"
    },
    "$link": {
      "modelType": "hidden",
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": ["*", "state"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scope": {
          "$ref": "./scope.schema.json",
          "const": "parent"
        }
      }
    }
  }
}